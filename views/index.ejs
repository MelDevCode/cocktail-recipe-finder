<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Cocktail App</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <div class="container py-4">
        <h1 class="row justify-content-center mb-3">Cocktail App</h1>
    </div>
    
    <section style="background-color: #eee;">
        <div class="container py-5">
          <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
              <div class="card shadow-0 border rounded-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                      <div class="bg-image hover-zoom ripple rounded ripple-surface">
                        <img src="<%= data.image %>"
                          class="w-100"/>
                        <a href="#!">
                          <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                          </div>
                        </a>
                      </div>
                    </div>
                    <div class="col-md-6 col-lg-9 col-xl-9">
                      <h3>Cocktail of the Day: <%= data.name %></h3>
                      <div class="d-flex flex-row">
                      </div>
                      <div class="mt-1 mb-0 text-muted small">
                        Ingredients:
                        <% data.ingredients.forEach(item => { %>
                        <span><%= item %></span>
                        <span class="text-primary"> â€¢ </span>
                        <% }) %>
                      </div>
                      <p class="text mb-4 mb-md-0 mt-3">
                        Preparation:
                        <%= data.preparation %>
                      </p>
                      <p class="text mb-4 mb-md-0 mt-3">
                        Glass:
                        <%= data.glassType %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    <div class="container py-4">
        <form action="/recipe" method="post">
            <div class="row">

                <div class="col-md-4 mb-4">
                    <input type="text" class="form-control" placeholder="Cocktail name" name="dname">
                </div>

                <div class="col-md-2 mb-4">
                    <select name="category" class="form-select">
                        <option selected>Category</option>
                        <% category.forEach(item => { %>
                        <option value="<%= item %>"><%= item %></option>
                        <% }) %>
                    </select> 
                </div>

                <div class="col-md-2 mb-4">
                    <select name="ingredient" class="form-select">
                        <option selected>Ingredient</option>
                        <% ingredient.forEach(item => { %>
                            <option value="<%= item %>"><%= item %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-md-2 mb-4">
                    <select name="type" class="form-select">
                            <option selected>Type</option>
                        <% type.forEach(item => { %>
                            <option value="<%= item %>"><%= item %></option>
                        <% }) %>
                        </select>
                </div>
                <div class="col-md-1 mb-4">
                    <button type="submit" class="btn btn-outline-dark">Search</button>
                </div>
            </div>
            
            
            
        </form>
    </div>
    
    <%- include("partials/footer.ejs") %>
  </body>
</html>